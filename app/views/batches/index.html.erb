<div class="container-fluid below-navbar">
  <h1>All Batches</h1>
  <p>Find all your batches, edit or delete them and create new ones. There are currently <%= current_user.batches.count %> batch(es).</p>
  <p><%= link_to "New Batch", new_batch_path, class: "btn btn-success" %></p>
  <% @batches.each do |batch| %>
    <div class="card card-index col-xs-12 col-sm-6">
      <div class="card-index-container">
        <div class="card-index-title">
          <%= batch.name %>
        </div>
        <div class="card-index-content">
          <div class="card-index-left-block">
            <div class="card-index-left-block-content">
              <div class="card-index-block-content-title">
              Course(s):
            </div>
              <ul>
                <% if batch.courses.empty? %>
                 not courses yet for this batch
                <% else %>
                  <% batch.courses.each do |course| %>
                  <li><%= course.name %></li>
                  <% end %>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="card-index-right-block">
            <div class="card-index-right-block-content">
              <div class="card-index-block-content-title">
              Student(s):
            </div>

              <ul>
                <% if batch.students.empty? %>
                 not students yet for this batch
                <% else %>
                  <% batch.students.each do |student| %>
                    <ul>
                      <li><%= student.first_name %></li>
                    </ul>
                  <% end %>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div class="card-index-footer">

        </div>
      </div>
      <div class="card-index-actions card-index-delete">
          <i>
          <%= link_to "", batch_path(batch), method: :delete, data: {confirm: "Are you sure?"}, class: "far fa-trash-alt" %></i>
        </div>
        <div class="card-index-actions card-index-edit">
          <i> <%= link_to "", edit_batch_path(batch), class: "far fa-edit" %></i>
        </div>
    </div>
  <% end %>
</div>
