<h1>Batches#index</h1>
<p>Find me in app/views/batches/index.html.erb</p>
<%= link_to "New Batch", batches_new_path %>
<% @batches.each do |batch| %>
  <ul>
    <li>Name: <%= batch.name %></li>
    <li>Course(s):
      <ul>
        <% if batch.courses.empty? %>
         not courses yet for this batch
        <% else %>
          <% batch.courses.each do |course| %>
          <li><%= course.name %></li>
            <% course.students.each do |student| %>
              <ul>
                <li><%= student.first_name %></li>
              </ul>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </li>
    <li><%= link_to "Delete", batch_path(batch), method: :delete %></li>
    <li><%= link_to "Edit", edit_batch_path(batch) %></li>
  </ul>
<% end %>
