<div class="user-sign-in col-xs-12 col-sm-6 offset-sm-2">
  <h2>Sign in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'form-control' } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: 'form-control' } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions form-actions-btn-devise">
      <%= f.button :submit, "Sign in", class: "btn btn-success btn-actions-devise" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
